@model CqrsSample.Web.Models.Post.NewPostModel

@{
    ViewBag.Title = "新しい記事";
}

<h2>新しい記事</h2>

@using (Html.BeginForm("New", "Post", FormMethod.Post, new { @class = "", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(m => m.Title, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Body, new { @class = "control-label" })
		@Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 20 })
	</div>

	<div class="form-group">
		<div class="checkbox">
			<label>
				@Html.CheckBoxFor(m => m.IsDraft)
				@Html.DisplayNameFor(m => m.IsDraft)
			</label>
		</div>
	</div>

	<div class="form-group">
		<input type="submit" value="保存" class="btn btn-primary" />
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}