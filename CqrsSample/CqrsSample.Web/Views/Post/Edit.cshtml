@model CqrsSample.Query.Posting.PostDetails

@{
    ViewBag.Title = "記事の編集";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { @class = "", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(m => m.Title, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Body, new { @class = "control-label" })
		@Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 20 })
	</div>

	<div class="form-group">
		<input type="submit" value="更新" class="btn btn-primary" />
	</div>
}